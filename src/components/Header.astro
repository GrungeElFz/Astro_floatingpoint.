---
import { MobileMenu } from "@/components/MobileMenu";
import { Image } from "astro:assets";
import Logo from "@/assets/logo.png";
---

<header class="absolute inset-x-0 top-0 z-50">
  <nav
    class="flex items-center justify-between p-6 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <a href="#" class="-m-1.5 p-1.5">
        <span class="sr-only">floatingpoint.</span>
        <Image
          src={Logo}
          class="h-8 w-auto"
          alt="floatingpoint."
        />
      </a>
    </div>
    <div class="flex lg:hidden">
      <MobileMenu client:load />
    </div>

    <div class="hidden lg:flex lg:gap-x-12">
      <a href="/sets" class="text-sm/6 font-semibold text-neutral-200">Sets</a>
      <a href="/videos" class="text-sm/6 font-semibold text-neutral-200">Videos</a>
      <a href="/events" class="text-sm/6 font-semibold text-neutral-200">Events</a>
      <a href="/about" class="text-sm/6 font-semibold text-neutral-200">About</a>
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <a href="#" class="text-sm/6 font-semibold text-neutral-200"
        >Instagram <span aria-hidden="true">&rarr;</span></a
      >
    </div>
  </nav>
</header>
