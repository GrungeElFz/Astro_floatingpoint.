---
import { EventCard } from "@/components/EventCard.tsx";

export interface EventData {
  imageSrc?: string;
  title: string;
  date: string;
  time: string;
  location: string;
  performers: string[];
  pass: string;
}

interface Props {
  events: EventData[];
}

const { events } = Astro.props;
---

<section class="bg-black text-neutral-100 py-16 sm:py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8 text-center">
    <h2 class="text-4xl sm:text-5xl font-bold mb-12">Events</h2>
    <p
      class="text-lg font-normal italic text-pretty text-neutral-400 sm:text-xl/8 mx-auto mb-12 mt-8"
    >
      Immersive sonic environment that push the boundaries of sound and space.
    </p>

    <div class="flex justify-center space-x-4 mb-12">
      <button
        class="px-6 py-2 rounded-full border border-gray-700 text-neutral-200 hover:text-white hover:border-cyan-200 transition-colors"
        >Upcoming (3)</button
      >
      <button
        class="px-6 py-2 rounded-full border border-gray-700 text-neutral-400 hover:text-white hover:border-gray-500 transition-colors"
        >Past (4)</button
      >
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        events.map((event) => (
          <EventCard
            imageSrc={event.imageSrc}
            title={event.title}
            date={event.date}
            time={event.time}
            location={event.location}
            performers={event.performers}
            pass={event.pass}
          />
        ))
      }
    </div>
  </div>
</section>
