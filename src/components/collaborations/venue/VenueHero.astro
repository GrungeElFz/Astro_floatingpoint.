---
import { Building, Zap, Sunset, MapPin } from "@lucide/astro";

// Data: "Spaces We Love" cards
const spaces = [
  {
    icon: Building,
    title: "Underground Warehouses",
    description:
      "Raw, industrial spaces perfect for immersive electronic experiences.",
    features: [
      "Large open spaces",
      "Industrial aesthetics",
      "Flexible layouts",
      "Authentic atmosphere",
    ],
  },
  {
    icon: Zap,
    title: "Art Galleries",
    description:
      "Creative spaces where visual art meets electronic soundscapes.",
    features: [
      "Artistic ambiance",
      "Unique acoustics",
      "Cultural integration",
      "Intimate settings",
    ],
  },
  {
    icon: Sunset,
    title: "Rooftop Venues",
    description: "Elevated experiences with city skylines and open-air vibes.",
    features: [
      "Panoramic views",
      "Open-air setting",
      "Urban backdrop",
      "Memorable experiences",
    ],
  },
  {
    icon: MapPin,
    title: "Alternative Spaces",
    description:
      "Unconventional locations that push the boundaries of event spaces.",
    features: [
      "Unique character",
      "Unexpected locations",
      "Creative potential",
      "Underground appeal",
    ],
  },
];
---

<section class="bg-black text-neutral-100 py-16 sm:py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto">
      <h1 class="text-5xl sm:text-6xl font-bold">Venue Collaboration</h1>
      <p class="mt-6 text-lg text-pretty text-neutral-400">
        Partner with floatingpoint. to transform your space into an underground
        electronic music destination. We work with unique venues worldwide to
        create transcendent experiences.
      </p>
    </div>

    <div class="mt-20 text-center">
      <h2 class="text-4xl sm:text-5xl font-bold text-white">Spaces We Love</h2>
      <p class="mt-6 mx-auto max-w-2xl text-lg text-neutral-400">
        We collaborate with diverse venues that share our passion for authentic
        underground experiences.
      </p>
    </div>

    <div class="mt-16 grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        spaces.map((space) => (
          <div class="group flex flex-col backdrop-blur-sm bg-white/5 p-8 rounded-3xl border border-white/10 transition-all duration-300 hover:border-cyan-400/50 hover:-translate-y-1">
            <div class="flex items-center gap-x-4 mb-4">
              <div class="flex h-12 w-12 flex-none items-center justify-center rounded-lg bg-neutral-800 border border-white/10">
                <space.icon class="text-cyan-400" size={24} />
              </div>
              <h3 class="text-2xl font-bold text-white">{space.title}</h3>
            </div>
            <p class="text-neutral-400">{space.description}</p>
            <ul class="mt-6 space-y-3 text-neutral-300">
              {space.features.map((feature) => (
                <li class="flex items-center gap-x-3">
                  <svg
                    class="h-5 w-5 flex-none text-cyan-400"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    aria-hidden="true"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.052-.143z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>
