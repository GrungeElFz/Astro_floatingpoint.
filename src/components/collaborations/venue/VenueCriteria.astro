---
import { Image } from "astro:assets";
import Logo from "src/assets/logo.png";
import { CheckCircle2 } from "@lucide/astro";

// Data: Venue Criteria list
const criteria = [
  {
    title: "Unique Character",
    description:
      "Spaces with distinctive architecture, history, or atmosphere that enhance the underground experience.",
  },
  {
    title: "Suitable Acoustics",
    description:
      "Venues that can accommodate electronic music without disturbing neighbors or compromising sound quality.",
  },
  {
    title: "Flexible Partnership",
    description:
      "Venue owners open to creative collaboration and an understanding of underground culture values.",
  },
  {
    title: "Capacity Range",
    description:
      "Intimate spaces (20-100) depending on the location acoustic.",
  },
];
---

<section class="bg-black text-neutral-100 py-16 sm:py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div
      class="mx-auto grid max-w-2xl grid-cols-1 gap-x-16 gap-y-16 lg:max-w-none lg:grid-cols-2 items-center"
    >
      <div>
        <h2 class="text-4xl sm:text-5xl font-bold text-white">
          What We Look For
        </h2>

        <dl class="mt-10 grid grid-cols-1 gap-x-8 gap-y-10">
          {
            criteria.map((item) => (
              <div class="relative pl-10">
                <dt class="font-semibold text-white">
                  <CheckCircle2 class="absolute left-0 top-1 h-6 w-6 text-cyan-400" />
                  {item.title}
                </dt>
                <dd class="mt-2 text-neutral-400">{item.description}</dd>
              </div>
            ))
          }
        </dl>
      </div>

      <div class="relative aspect-square w-full max-w-lg mx-auto lg:max-w-none">
        <div
          class="absolute inset-0 bg-white/5 rounded-3xl border border-white/10 flex items-center justify-center"
        >
          <Image
            src={Logo}
            alt="floatingpoint. logo"
            class="h-full w-full object-contain"
          />
        </div>
      </div>
    </div>
  </div>
</section>
